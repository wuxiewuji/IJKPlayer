<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.IJK.Player.7" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--标题栏颜色-->
        <item name="colorPrimaryDark">@android:color/transparent</item>

    </style>

    <style name="player_end_text">
        <item name="android:textColor">#ffa4a4a4</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="danmaku_setting_text">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="danmaku_setting_image">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
