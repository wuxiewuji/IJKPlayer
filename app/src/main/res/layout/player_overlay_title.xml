<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_overlay_height"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="12dp"
    >

    <ImageView
        android:id="@+id/video_overlay_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:src="@drawable/video_icon_back"/>

    <ImageView
        android:id="@+id/video_overlay_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/video_icon_share"/>

    <ImageView
        android:id="@+id/video_overlay_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/video_overlay_share"
        android:src="@drawable/add_group"/>

    <ImageView
        android:id="@+id/video_overlay_danmaku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/video_overlay_add"
        android:src="@drawable/danmu_on"
        android:visibility="invisible"
        />


</RelativeLayout>